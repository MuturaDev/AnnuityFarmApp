<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_dialog_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="20dp">


    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/layoutDialog"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/dialog_background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/dialogInfoTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/colorSuccess"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                />


            <TextView
                android:id="@+id/dialogInfoMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text=""
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/violet_200"
                android:textSize="14sp"
                />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/circular_bg"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dialogInfoImageIcon"
                android:layout_width="80dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/annuity_logo"
                android:layout_height="80dp"/>
        </LinearLayout>


    </RelativeLayout>



    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/dialogInfoNegativeButton"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textSize="14sp"
        android:text=""
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/dialogInfoPositiveButton"
        app:layout_constraintTop_toBottomOf="@id/layoutDialog"/>



    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/dialogInfoPositiveButton"
        android:textSize="14sp"
        android:text=""
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutDialog"/>


</androidx.constraintlayout.widget.ConstraintLayout>



