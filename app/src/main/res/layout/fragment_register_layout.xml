<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:scrollbarThumbVertical="@null"
    android:background="@color/white"
    tools:context=".fragments.LoginFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtHeader"
            android:visibility="visible"
            android:layout_marginTop="40dp"
            android:text="@string/stay_true"
            android:textSize="70sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnlogout"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/curved_button_bg"
            android:text="Logout"/>

        <TextView
            android:id="@+id/txtSmallHeader"
            android:layout_marginTop="10dp"
            android:text="Set up your account"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="normal"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/violet_200"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="30dp"
                android:ems="10"
                android:id="@+id/txtFirstName"
                android:textSize="15sp"
                android:inputType="text"
                android:hint="@string/first_name"
                android:backgroundTint="@color/violet_200"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textColorHint="@color/violet_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:autofillHints="@string/email" />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/violet_200"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="30dp"
                android:ems="10"
                android:id="@+id/txtLastName"
                android:textSize="15sp"
                android:inputType="text"
                android:hint="@string/last_name"
                android:backgroundTint="@color/violet_200"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textColorHint="@color/violet_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:autofillHints="@string/email" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/violet_200"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="30dp"
                android:ems="10"
                android:id="@+id/txtMobileNumber"
                android:textSize="15sp"
                android:inputType="phone"
                android:hint="@string/mobile_number"
                android:backgroundTint="@color/violet_200"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textColorHint="@color/violet_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:autofillHints="@string/email" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/violet_200"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="30dp"
                android:ems="10"
                android:textSize="15sp"
                android:inputType="textEmailAddress"
                android:hint="@string/email_lowercase"
                android:id="@+id/txtEmail"
                android:backgroundTint="@color/violet_200"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textColorHint="@color/violet_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:autofillHints="@string/email" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/violet_200"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="30dp"
                android:ems="10"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:hint="@string/password_lowercaps"
                android:id="@+id/txtPassword"
                android:backgroundTint="@color/violet_200"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textColorHint="@color/violet_500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:autofillHints="@string/email" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/violet_200"
            >


            <androidx.appcompat.widget.AppCompatSpinner
                android:paddingStart="0dp"
                android:backgroundTint="@color/violet_200"
                android:layout_width="match_parent"
                android:entries="@array/gender"
                android:id="@+id/txtGender"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/violet_200"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/curved_button_bg"
            android:text="@string/sign_up"/>

        <LinearLayout
            android:id="@+id/layoutAlreadyHaveAccount"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/half_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Do you have an account?"/>

            <TextView
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:textColor="@color/violet_500"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/buttonSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"/>

        </LinearLayout>

        <include
            android:id="@+id/include"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            layout="@layout/layout_google_signin_out"/>


    </LinearLayout>

</ScrollView>