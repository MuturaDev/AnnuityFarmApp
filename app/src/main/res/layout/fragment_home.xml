<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="60dp"
    tools:context=".fragments.HomeFragment">


    <ScrollView
        android:layout_marginTop="5dp"
        android:scrollbarThumbVertical="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!--Browse providers-->
            <HorizontalScrollView
                android:scrollbars="horizontal"
                android:scrollbarSize="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/provider1"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:layout_width="@dimen/home_top_cards_width"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="@dimen/home_corner_radius"
                        android:layout_height="@dimen/home_top_cards_height">

                        <RelativeLayout
                            android:padding="10dp"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img_logo"
                                android:src="@drawable/provider1"
                                android:layout_width="@dimen/image_height_width"
                                android:layout_height="@dimen/image_height_width"/>

                            <TextView
                                android:layout_below="@+id/img_logo"
                                android:layout_marginTop="10dp"
                                android:textSize="@dimen/home_provider_text_size"
                                android:textColor="@color/violet_200"
                                android:fontFamily="@font/poppins_bold"

                                android:text="Sanlam Kenya PLC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/provider2"
                        android:layout_margin="10dp"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="@dimen/home_top_cards_width"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="@dimen/home_corner_radius"
                        android:layout_height="@dimen/home_top_cards_height">

                        <RelativeLayout
                            android:padding="10dp"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img_logo1"
                                android:src="@drawable/provider2"
                                android:layout_width="@dimen/image_height_width"
                                android:layout_height="@dimen/image_height_width"/>

                            <TextView
                                android:layout_below="@+id/img_logo1"
                                android:layout_marginTop="10dp"
                                android:textSize="@dimen/home_provider_text_size"
                                android:textColor="@color/violet_200"
                                android:fontFamily="@font/poppins_bold"

                                android:text="AIG Kenya Insurance Company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/provider3"
                        android:layout_margin="10dp"
                        android:layout_width="@dimen/home_top_cards_width"
                        app:cardElevation="5dp"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        app:cardCornerRadius="@dimen/home_corner_radius"
                        android:layout_height="@dimen/home_top_cards_height">

                        <RelativeLayout
                            android:padding="10dp"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/img_logo2"
                                android:src="@drawable/provider3"
                                android:layout_width="@dimen/image_height_width"
                                android:layout_height="@dimen/image_height_width"/>

                            <TextView
                                android:layout_below="@+id/img_logo2"
                                android:layout_marginTop="20dp"
                                android:textSize="@dimen/home_provider_text_size"
                                android:textColor="@color/violet_200"
                                android:fontFamily="@font/poppins_bold"

                                android:text="Jubilee Insurance Company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

            </HorizontalScrollView>

        <HorizontalScrollView
            android:scrollbars="horizontal"
            android:scrollbarSize="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="Pension"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="18sp"
                    android:textColor="@color/violet_200"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View

                    android:background="@color/violet_200"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="2dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="Annuity"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:visibility="gone"
                    android:background="@color/violet_200"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="2dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="Income Draw Down"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:visibility="gone"
                    android:background="@color/violet_200"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="2dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="Money/Investment"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:visibility="gone"
                    android:background="@color/violet_200"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

            </LinearLayout>




        </LinearLayout>

        </HorizontalScrollView>



            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                app:cardCornerRadius="@dimen/home_corner_radius"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/new_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_provider"
                            android:src="@drawable/provider1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/violet_200"
                            android:textSize="@dimen/home_provider_text_size"
                            android:text="What Sanlam offers:"
                            android:layout_toRightOf="@id/img_provider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <org.sufficientlysecure.htmltextview.HtmlTextView
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_below="@+id/img_provider"
                            android:id="@+id/provider_Ads_details"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAppearance="@android:style/TextAppearance.Small" />
                    </RelativeLayout>





                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                app:cardCornerRadius="@dimen/home_corner_radius"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:padding="10dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_provider2"
                        android:src="@drawable/provider2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/violet_200"
                        android:textSize="@dimen/home_provider_text_size"
                        android:text="Pension Trustees Liability Insurance"
                        android:layout_toRightOf="@id/img_provider2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <org.sufficientlysecure.htmltextview.HtmlTextView
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/img_provider2"
                        android:id="@+id/provider_Ads_details2"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="@android:style/TextAppearance.Small" />



                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                app:cardCornerRadius="@dimen/home_corner_radius"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/new_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                    <RelativeLayout
                        android:id="@+id/layout"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_provider3"
                            android:src="@drawable/provider3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>

                        <TextView
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/violet_200"
                            android:textSize="@dimen/home_provider_text_size"
                            android:text="Personal Pension Plan"
                            android:layout_toRightOf="@id/img_provider3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <org.sufficientlysecure.htmltextview.HtmlTextView
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_below="@+id/img_provider3"
                            android:id="@+id/provider_Ads_details3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAppearance="@android:style/TextAppearance.Small" />

                    </RelativeLayout>



                    <View
                        android:layout_below="@+id/layout"
                        android:id="@+id/line"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <Button
                        android:layout_marginEnd="10dp"
                        android:layout_below="@+id/line"
                        android:layout_alignParentEnd="true"
                        android:text="Get Quote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>




            <!--New policies-->

            <!--Random Policies for Providers-->

            <!--Your policies-->


        </LinearLayout>

    </ScrollView>





</LinearLayout>